FROM node:18-alpine

ENV MONGO_URI="" 
ENV CLOUDINARY_API_KEY='' 
ENV CLOUDINARY_SECRET_KEY='' 
ENV CLOUDINARY_NAME='' 
ENV JWT_SECRET="" 
ENV ADMIN_EMAIL="" 
ENV ADMIN_PASSWORD="" 
ENV STRIPE_SECRET_KEY="" 
ENV RAZORPAY_KEY_ID=""
ENV RAZORPAY_KEY_SECRET=""

WORKDIR /app

COPY . .

RUN npm install

CMD ["npm","start"]